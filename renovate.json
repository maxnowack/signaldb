{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "branchNameStrict": true,
  "labels": ["dependencies"],
  "rebaseWhen": "conflicted",
  "automerge": true,
  "platformAutomerge": true,
  "automergeType": "pr",
  "dependencyDashboard": false,
  "ignorePaths": [],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "addLabels": ["tooling"]
    }
  ]
}
